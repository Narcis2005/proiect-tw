<div class="gallery">
  <% function romanize(num) {
    const roman = { M: 1000, CM: 900, D: 500, CD: 400, C: 100, XC: 90, L: 50, XL: 40, X: 10, IX: 9, V: 5, IV: 4, I: 1 };
    let str = '';
    for (let i of Object.keys(roman)) {
      let q = Math.floor(num / roman[i]);
      num -= q * roman[i];
      str += i.repeat(q);
    }
    return str;
  }%>
  <% imagini.forEach((imagine, index) => { %>
    <figure class="item<%= index + 1 %>">
      <figcaption><%= romanize(index + 1) %>. <%= imagine.descriere %></figcaption>

      <picture>
        <source media="(max-width: 600px)" srcset="<%= caleGalerie %>/<%= imagine.cale_imagine %>">
        <source media="(max-width: 900px)" srcset="<%= caleGalerie %>/<%= imagine.cale_imagine %>">
        <img src="<%= caleGalerie %>/<%= imagine.cale_imagine %>" alt="<%= imagine.titlu %>" title="<%= imagine.descriere %>">
      </picture>

    </figure>
  <% }) %>
</div>